{
  "name": "ai-code-assistant",
  "displayName": "AI Code Assistant",
  "description": "AI-powered coding assistant with React-based chat interface",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
  "type": "git",
  "url": "https://github.com/your-username/your-repo-name.git"
},
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-code-assistant.start",
        "title": "Start AI Code Assistant"
      }
    ],
    "configuration": {
      "title": "AI Code Assistant",
      "properties": {
        "aiCodeAssistant.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for the AI Code Assistant"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build:webview": "cd src/webview && npm run build"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "css-loader": "^7.1.2",
    "eslint": "^8.56.0",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "autoprefixer": "^10.4.0",
    "dompurify": "^3.0.6",
    "highlight.js": "^11.9.0",
    "marked": "^11.1.0",
    "openai": "^4.0.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0"
  }
}
